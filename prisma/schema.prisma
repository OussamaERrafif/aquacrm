// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Party {
  id       String    @id @default(uuid())
  name     String
  company  String?
  email    String    @unique
  phone    String?
  address  String?
  invoices Invoice[]
  loans    Loan[]
}

model Fish {
  id        String   @id @default(uuid())
  name      String
  category  String
  status    String // 'In Stock', 'Low Stock', 'Out of Stock'
  price     Float
  stock     Int
  minStock  Int
  supplier  String
  imageUrl  String
  imageHint String

  invoiceItems InvoiceItem[]
}

model InvoiceItem {
  id           String  @id @default(uuid())
  invoiceId    String
  invoice      Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  fishId       String
  fish         Fish    @relation(fields: [fishId], references: [id])
  length       String // 'xs' | 's' | 'm' | 'l' | 'xl' | 'xxl'
  weight       Float
  pricePerKilo Float

  @@index([invoiceId])
  @@index([fishId])
}

model Invoice {
  id            String        @id @default(uuid())
  invoiceNumber String        @unique @default(cuid())
  type          String // 'buy' | 'sell'
  date          DateTime      @default(now())
  dueDate       DateTime
  partyId       String
  party         Party         @relation(fields: [partyId], references: [id])
  items         InvoiceItem[]
  totalAmount   Float
  status        String // 'Paid', 'Unpaid', 'Overdue'

  @@index([partyId])
}

model Loan {
  id                  String   @id @default(uuid())
  loanId              String   @unique @default(cuid())
  fisherId            String
  fisher              Party    @relation(fields: [fisherId], references: [id])
  amount              Float
  disbursementDate    DateTime
  repaymentSchedule   String
  outstandingBalance  Float
  status              String // 'Active', 'Paid Off', 'Defaulted'

  @@index([fisherId])
}
